
.swiper {
  display: flex;
  width: 100%;
}
.sort {
  display: flex;
}
.single_sort {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  height: 1.3rem;
  width: 4rem;
  background-color: #00DDDD;
  border: 1px solid #FFFFFF;
  border-radius: 1rem;
  margin: 0.5rem 1rem 0.5rem 0rem; 
}
.line {
  background-color: #AAAAAA;
  height: 0.5px;
  width: 100%;
}
.single_title {
  display: flex;
  flex-direction: row;
  font-size: 15px;
  font-weight: bold;
  margin-top: 0.4rem;
}
.type {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.single_game {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
}
.image {
  width: 3.9rem;
  height: 3.9rem;
  border-radius: 0.8rem;
  box-shadow: 2px 2px 3px #AAAAAA;
}
.game_name {
  font-size: 10px;
  font-weight: bold;
}
.channel_view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.single_channel {
  width: 10rem;
  height: 4.5rem;
  border-radius: 1rem;
  margin: 0.6rem;
  box-shadow: 2px 2px 3px #AAAAAA;
}
