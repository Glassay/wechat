
.whole_info {
  display: flex;
  flex-direction: row;
  margin-left: 15px;
  align-items: center;
}
.info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.from {
  border: 1px solid white;
  width: 50px;
  border-radius: 5px;
}
.grade {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #00DDDD;
  margin-left: 5rem;
  box-shadow: 4px 5px 5px #00AAAA;
}
.line {
  background-color: #AAAAAA;
  height: 0.5px;
  width: 100%;
  margin-top: 8px;
}
.guanzhu {
  border: 1px solid #00DDDD;
  width: 40px;
  border-radius: 5px;
  color: #00DDDD;
  font-size: 15px;
  margin-left: 0.7rem;
}
.xiazai {
  border: 1px solid #00DDDD;
  width: 40px;
  border-radius: 5px;
  background-color: #00DDDD;
  font-size: 15px;
  margin-left: 0.5rem;
}
.guan_xia {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.xiangqing {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 6px;
}
.xiangq_line {
  /* background-color: #00DDDD; */
  height: 5px;
  width: 100%;
}
.xiangqing1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.shouqi {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin: 0px 10px 5px 0px;
  color: #00DDDD;
  font-size: 15px;
}
.qun {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 15px;
  color: #00DDDD;
  margin: 2px 0px 2px 0px;
  align-items: center;
}
.biaoqian {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 15px;
}
.single_biaoqian {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 1px solid #00DDDD;
  color: #00DDDD;
  width: 40px;
  height: 18px;
  border-radius: 5px;
  margin: 5px 10px 3px 10px;
  font-size: 10px;
}
.pic {
  display: flex;
  flex-direction: row;
}
.pic_size {
  width: 120px;
  height: 200px;
}
.remark_view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 15px;
}
.remark {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0.8rem 0.8rem 0rem 0.8rem;
}
.remark_icon {
  color: #FFFFFF;
  font-size: 0.6rem;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color:  #00DDDD;
  border: 1px solid #00DDDD;
  border-radius: 50%;
  width: 20px;
  height: 20px;
}
.jianjie_title {
  font-size: 17px;
  border-left: 4px solid #00DDDD;
  margin: 10px 0px 10px 10px;
}
.jianjie_text {
  font-size: 12px;
  color: #888888;
  margin: 0px 10px 0px 10px;
}
.comment_head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 1rem;
  align-items: center;
}
