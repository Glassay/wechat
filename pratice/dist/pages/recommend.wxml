
  <view>
    <view  wx:for="{{home}}" wx:key="index">
      <view>
          <view class="from">
            <view>
              <image style="width: 20px; height: 20px" src="{{item.litile_image}}"/>
              <text style="font-size: 13px; color: #DDDDDD">{{item.game_from}}</text>
            </view>
            <view>
              <image style="width: 20px; height: 20px" src="{{point}}" bindtap="choose_point"/>
            </view>
          </view>
          <view class="title">{{item.game_title}}</view>
          <view bindtap="click">
            <image class="pic" src="{{item.game_image}}" mode="widthFix heightFix"/>
            <view class="title" style="font-size: 13px">{{item.describe}}</view>
          </view>
          <view class="last"/>
      </view>
    </view>
  </view>