
.content {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  background-color: #CCEEFF;
}
.small_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  /* height: 10rem;
  margin: 0.5rem 0.8rem 0.2rem 0.8rem; */
  box-shadow: 2px 2px 3px #888888;
  position: relative;
}
.title {
  display: flex;
  flex-direction: column;
  /* margin-top: 20rpx; */
  align-items: center;
  font-size: 28rpx;
}
.line {
  background-color: #000;
  height: 0.5px;
  width: 95%;
}
.label {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  font-size: 24rpx;
}
.single_label {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0px 1rem;
}
.profile {
  font-size: 15px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  margin: 20rpx;
}
.article {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  margin: 20rpx;
}
  
