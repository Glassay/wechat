<script>
import wepy from 'wepy'
export default class Blog extends wepy.page {
  config = {
  }
  data = {
  }
  methods = {
    js() {
      wepy.navigateTo({
        url: './js'
      })
    },
    node() {
      wepy.navigateTo({
        url: './node'
      })
    },
    h5() {
      wepy.navigateTo({
        url: './h5'
      })
    },
    mysql() {
      wepy.navigateTo({
        url: './mysql'
      })
    }
  }
  onLoad() {
    let self = this
    wepy.getUserInfo({
      success: function(res) {
        self.nickName = res.userInfo.nickName
        self.avatarUrl = res.userInfo.avatarUrl
      }
    })
    wepy.showToast({
      title: '加载中',
      icon: 'loading',
      duration: 800
    })
    wepy.getSystemInfo({
      success(res) {
        self.height = res.windowHeight
        self.width = res.windowWidth
      }
    })
  }
}
</script>
