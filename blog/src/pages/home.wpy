  <view class="view">
    <view class="type" @tap="js">
      <view>
        <image class="image" src="https://www.javascript.com/images/meta/facebook.png"></image>
      </view>
      <view class="time">
        <view style="font-size: 20px">JavaScript</view>
      </view>
    </view>
    <view class="type" @tap="node">
      <view><image class="image" src="https://cdn.colorlib.com/wp/wp-content/uploads/sites/2/nodejs-frameworks.png"></image></view>
      <view class="time">
        <view style="font-size: 20px">Node</view>
      </view>
