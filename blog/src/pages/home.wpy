    <view class="type" @tap="h5">
      <view>
        <image class="image" src="https://www.sololearn.com/Uploads/html-css.jpg"></image>
      </view>
      <view class="time">
        <view style="font-size: 20px">H5</view>
      </view>
    </view>
    <view class="type" @tap="mysql">
      <view>
        <image class="image" src="https://farm4.staticflickr.com/3913/14522157584_a67ab2e898_o_d.png"></image>
